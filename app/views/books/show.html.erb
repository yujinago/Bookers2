<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <%= image_tag @user.get_profile_image(120, 120) %>
            <table class="table">
                <tbody>
                    <tr>
                        <th>name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <a class="btn btn-outline-secondary btn-block" href="users/<%= current_user.id %>/edit">
                    <i class="fas fa-user-cog" aria-hidden="true"></i>
                </a>
            </div>
            <h2 class="mt-3">New book</h2>
            <%= form_with model: @book do |f| %>
                <div class="form-group">
                    <label for="book_title">Title</label>
                    <%= f.text_field :title, class: "form-control book_title" %>
                </div>
                <div class="form-group">
                    <label for="book_opinion">Opinion</label>
                    <%= f.text_area :body, class: "form-control book_body" %>
                </div>
                <div>
                    <%= f.submit 'Create Book', class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                        <tr>
                            <td>
                                <a href="/users/<%= @book_find.user.id %>">
                                    <%= image_tag @book_find.user.get_profile_image(100, 100) %><br>
                                    <%= @book_find.user.name %>
                                </a>
                            </td>
                            <td><%= link_to  @book_find.title, book_path(@book_find) %></td>
                            <td><%= @book_find.body%></td>
                            <% if @book_find.user == current_user %>
                                <td><%=link_to "Edit", edit_book_path(@book_find), class: "btn btn-sm btn-success" %></td>
                                <td><%=link_to "Destroy", book_path(@book_find), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %></td>
                            <% end %>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
