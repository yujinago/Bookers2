<h1>User info</h1>
<%= image_tag @user.get_profile_image(120, 120) %>
<table>
    <tbody>
        <tr>
            <th>name</th>
            <th><%= @user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
        </tr>
    </tbody>
</table>

<h1>New book</h1>
<%= form_with model book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Create Book' %>
<% end %>
